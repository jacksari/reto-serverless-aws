{
  "get": {
    "summary": "Listar citas por asegurado",
    "parameters": [
      {
        "name": "insuredId",
        "in": "path",
        "required": true,
        "description": "Código del asegurado (5 dígitos con ceros a la izquierda)",
        "schema": {
          "type": "string",
          "example": "00001"
        }
      },
      {
        "name": "status",
        "in": "query",
        "required": false,
        "description": "Filtrar citas por estado",
        "schema": {
          "type": "string",
          "enum": ["pending", "completed", "cancelled"],
          "example": "pending"
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Lista de citas",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "lista de citas del paciente 00001 con estado pending"
                },
                "item": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "insuredId": {
                        "type": "string",
                        "description": "Código del asegurado (5 dígitos con ceros a la izquierda)",
                        "example": "00001"
                      },
                      "scheduleId": {
                        "type": "integer",
                        "example": 101
                      },
                      "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-06-21T05:30:05.970Z"
                      },
                      "countryISO": {
                        "type": "string",
                        "example": "PE"
                      },
                      "status": {
                        "type": "string",
                        "enum": ["pending", "completed", "cancelled"],
                        "example": "pending"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "400": {
        "description": "Datos inválidos",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Datos inválidos"
                },
                "details": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "property": {
                        "type": "string",
                        "example": "status"
                      },
                      "constraints": {
                        "type": "object",
                        "additionalProperties": {
                          "type": "string"
                        },
                        "example": {
                          "isIn": "status must be one of the following values: pending, completed, cancelled"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
